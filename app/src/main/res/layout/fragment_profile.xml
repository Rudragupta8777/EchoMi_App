<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_obsidian"
    android:padding="20dp"
    tools:context=".Fragments.ProfileFragment">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPERATIVE PROFILE"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_tech_card"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/assistant"
                app:tint="@color/text_primary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS: ACTIVE"
                    android:textColor="@color/terminal_green"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:fontFamily="monospace"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEVEL 1 CLEARANCE"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp"
                    android:letterSpacing="0.05"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/subtle_border"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESIGNATION (NAME)"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLINK ID (EMAIL)"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user.email@example.com"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/manageContactsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="MANAGE WHITELIST"
        android:textColor="@color/background_obsidian"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:background="@drawable/bg_button_emerald"
        app:backgroundTint="@null"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:text="TERMINATE SESSION"
        android:textColor="@color/danger"
        android:letterSpacing="0.1"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/danger"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimationView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/cool"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
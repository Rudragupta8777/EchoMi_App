<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_obsidian">

    <ImageView
        android:id="@+id/backgroundPattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:alpha="0.3"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/assistant"
            android:layout_marginBottom="24dp"
            app:tint="@color/terminal_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECHOMI"
            android:textSize="32sp"
            android:letterSpacing="0.2"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTELLIGENT CALL GATEWAY"
            android:textSize="10sp"
            android:letterSpacing="0.3"
            android:textColor="@color/terminal_green"
            android:layout_marginBottom="48dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="INITIALIZE SEQUENCE"
            android:textSize="14sp"
            android:textColor="@color/background_obsidian"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:letterSpacing="0.05"
            app:icon="@drawable/ic_google"
            app:iconTint="@color/background_obsidian"
            app:iconGravity="textStart"
            android:background="@drawable/bg_button_emerald"
            app:backgroundTint="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECURE CONNECTION REQUIRED"
            android:layout_marginTop="16dp"
            android:textSize="10sp"
            android:textColor="@color/text_tertiary"/>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimationView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/cool"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_obsidian"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tech_card"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_lock"
            android:padding="10dp"
            android:background="@drawable/bg_input_glass"
            app:tint="@color/terminal_green"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SECURITY REQUEST"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="AMAZON SERVICE"
            android:textSize="12sp"
            android:textColor="@color/terminal_green"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_glass"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/callerNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="SOURCE: +1234567890"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Requesting one-time access code for delivery verification."
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/approveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="AUTHORIZE ACCESS"
            android:textColor="@color/background_obsidian"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:background="@drawable/bg_button_emerald"
            app:backgroundTint="@null"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/denyButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="DENY REQUEST"
            android:textColor="@color/danger"
            android:backgroundTint="#1AFFFFFF"
            app:strokeColor="@color/danger"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISMISS"
            android:textColor="@color/text_tertiary"
            android:layout_gravity="center"
            android:padding="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_obsidian"
    tools:context=".Fragments.CallLogsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INTERCEPTION LOGS"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_input_glass"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/search_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            app:tint="@color/text_secondary"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@null"
            android:hint="FILTER DATA..."
            android:textColorHint="@color/text_tertiary"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:inputType="text"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/callLogsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            android:paddingHorizontal="16dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/cool"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/emptyStateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO TRANSMISSIONS"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.1"
                android:fontFamily="monospace"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log database is empty"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_tech_card"
    android:padding="18dp">

    <View
        android:id="@+id/statusStrip"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/terminal_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/callerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unknown Caller"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/statusStrip"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/callTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:32 â€¢ SYSTEM"
        android:textColor="@color/terminal_green"
        android:textSize="10sp"
        android:letterSpacing="0.05"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/statusStrip"
        app:layout_constraintTop_toBottomOf="@id/callerName"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:background="@drawable/call_log"
        app:tint="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
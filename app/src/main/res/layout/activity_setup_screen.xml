<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_obsidian"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM LINK"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Establish connection with carrier network."
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <LinearLayout
        android:id="@+id/step1Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_tech_card"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STEP 01: ACQUIRE TARGET"
            android:textColor="@color/terminal_green"
            android:textSize="10sp"
            android:letterSpacing="0.1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy forwarding number"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input_glass"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/twilioNumberTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+1 626-427-0085"
                android:textColor="@color/terminal_green"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:paddingStart="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COPY"
                android:textColor="@color/background_obsidian"
                android:backgroundTint="@color/terminal_green"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/step2Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_tech_card"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/step1Card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STEP 02: INJECT CONFIG"
            android:textColor="@color/terminal_green"
            android:textSize="10sp"
            android:letterSpacing="0.1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure call forwarding in system settings."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="OPEN SYSTEM SETTINGS"
            android:textColor="@color/text_primary"
            android:letterSpacing="0.05"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/text_tertiary"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:text="VERIFY CONNECTION"
        android:textColor="@color/background_obsidian"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:background="@drawable/bg_button_emerald"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>